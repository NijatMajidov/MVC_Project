@using InanceWebApp.Models;
<!-- service section -->
@model List<Service>
<section class="service_section layout_padding">
    <div class="container ">
        <div class="heading_container heading_center">
            <h2> Our Services </h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 mx-auto">
                    <div class="box ">
                        <div class="img-box">
                            <img src="~/images/@item.Img" alt="" />
                        </div>
                        <div class="detail-box">
                            <h5>
                                @item.Name
                            </h5>
                            <p>
                                @item.Description
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="btn-box">
            <a href="">
                View More
            </a>
        </div>
    </div>
</section>

<!-- end service section -->